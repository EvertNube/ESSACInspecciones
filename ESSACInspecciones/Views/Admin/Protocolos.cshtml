    function setImage(idProtocolo, idPlantilla, idInmueble, estado) {
        var strImg = "", ruta = "../Content/themes/views/images/"; //$("#2").attr("src", "../Content/themes/views/images/loading.gif");
        switch (estado) {
            case 1:
                if (localStorage.getItem("respuestas_" + idProtocolo + idPlantilla + idInmueble)) ruta += "circle_yellow.jpg";
                else ruta += "circle_red.jpg";
                break;
            case 2:
                if (localStorage.getItem("respuestas_" + idProtocolo + idPlantilla + idInmueble)) ruta += "circle_yellow.jpg";
                else ruta += "circle_green.jpg";
                break;
            case 3: ruta += "circle_green.jpg"; break;
            default: break;
        }
        strImg = '<img src="' + ruta + '" />';
        return strImg;
    }
    function saveStorage(key, value) {
        var oStorage = {};
